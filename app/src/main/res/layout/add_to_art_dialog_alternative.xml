<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="375dp"
    android:layout_height="700dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_add_to_card_tea_pic"
        android:layout_width="184dp"
        android:layout_height="179dp"
        android:src="@drawable/classic_mt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.088"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <TextView
        android:id="@+id/tv_add_to_card_tea_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Milk Tea"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.211"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_add_to_card_tea_pic"
        app:layout_constraintVertical_bias="0.062" />

    <TextView
        android:id="@+id/tv_add_to_card_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="104dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="50"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_add_to_cart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.823"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.521" />

    <Button
        android:id="@+id/btn_add_to_cart_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.214"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.951" />

    <Button
        android:id="@+id/btn_add_to_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add to Cart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.764"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.951" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_nata"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_marginBottom="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.459"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.729">

        <CheckBox
            android:id="@+id/cb_add_to_card_nata"
            android:layout_width="203dp"
            android:layout_height="46dp"
            android:text="Nata de Coco"
            android:fontFamily="sans-serif-smallcaps"
            app:layout_constraintBottom_toBottomOf="@id/cv_nata"
            app:layout_constraintRight_toRightOf="@+id/cv_nata"
            app:layout_constraintStart_toStartOf="@+id/cv_nata"
            app:layout_constraintTop_toTopOf="@id/cv_nata" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_cheese"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_marginBottom="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.459"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.823">

        <CheckBox
            android:id="@+id/cb_add_to_card_cheese"
            android:layout_width="203dp"
            android:layout_height="46dp"
            android:text="Salted Cream Cheese"
            android:fontFamily="sans-serif-smallcaps"
            app:layout_constraintBottom_toBottomOf="@id/cv_cheese"
            app:layout_constraintRight_toRightOf="@+id/cv_cheese"
            app:layout_constraintStart_toStartOf="@+id/cv_cheese"
            app:layout_constraintTop_toTopOf="@id/cv_cheese"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="520dp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_pearls"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_marginBottom="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.459"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.909">

        <CheckBox
            android:id="@+id/cb_add_to_card_pearls"
            android:layout_width="203dp"
            android:layout_height="46dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Extra Tapioca Pearls"
            app:layout_constraintBottom_toBottomOf="@id/cv_pearls"
            app:layout_constraintRight_toRightOf="@+id/cv_pearls"
            app:layout_constraintStart_toStartOf="@+id/cv_pearls"
            app:layout_constraintTop_toTopOf="@id/cv_pearls" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_coffee_jelly"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.459"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.598">

        <CheckBox
            android:id="@+id/cb_add_to_card_coffee_jelly"
            android:layout_width="203dp"
            android:layout_height="46dp"
            android:text="Coffee Jelly"
            android:fontFamily="sans-serif-smallcaps"
            app:layout_constraintBottom_toBottomOf="@id/cv_coffee_jelly"
            app:layout_constraintRight_toRightOf="@+id/cv_coffee_jelly"
            app:layout_constraintStart_toStartOf="@+id/cv_coffee_jelly"
            app:layout_constraintTop_toTopOf="@id/cv_coffee_jelly" />

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/ib_large"
        android:layout_width="67dp"
        android:layout_height="59dp"
        android:src="@drawable/large_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.688"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.485"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <ImageView
        android:id="@+id/ib_medium"
        android:layout_width="67dp"
        android:layout_height="59dp"
        android:src="@drawable/medium_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.308"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.485"
        app:srcCompat="@drawable/ic_launcher_foreground" />

</androidx.constraintlayout.widget.ConstraintLayout>